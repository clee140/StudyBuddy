<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Shadow Layer -->
    <item>
        <shape>
            <solid android:color="#000000" /> <!-- Shadow color -->
            <corners android:radius="50dp" /> <!-- Radius for rounded corners -->
        </shape>
    </item>

    <!-- Shape Layer -->
    <item android:right="10dp" android:bottom="10dp">
        <shape>
            <solid android:color="#4CE59C" /> <!-- Background color of the shape -->
            <corners android:radius="20dp" /> <!-- Radius for rounded corners (if needed) -->
        </shape>
    </item>
</layer-list>

